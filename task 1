#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    char choice;

    do {
        // Initialize random seed
        srand(time(0));

        // Generate random number between 1 and 100
        int secretNumber = rand() % 100 + 1;
        int guess;
        int attempts = 0;

        cout << "====================================\n";
        cout << "   ðŸŽ¯ NUMBER GUESSING GAME (C++)\n";
        cout << "====================================\n";
        cout << "I have selected a number between 1 and 100.\n";
        cout << "Try to guess it!\n\n";

        while (true) {
            cout << "Enter your guess: ";
            cin >> guess;

            // Input validation
            if (cin.fail()) {
                cin.clear();
                cin.ignore(1000, '\n');
                cout << "âš ï¸ Invalid input! Please enter a number.\n\n";
                continue;
            }

            attempts++;

            if (guess < secretNumber) {
                cout << "ðŸ“‰ Too low! Try again.\n\n";
            } 
            else if (guess > secretNumber) {
                cout << "ðŸ“ˆ Too high! Try again.\n\n";
            } 
            else {
                cout << "ðŸŽ‰ Congratulations! You guessed the correct number.\n";
                cout << "ðŸ”¢ Total attempts: " << attempts << "\n\n";
                break;
            }
        }

        cout << "Do you want to play again? (y/n): ";
        cin >> choice;
        cout << "\n";

    } while (choice == 'y' || choice == 'Y');

    cout << "ðŸ‘‹ Thank you for playing!\n";
    return 0;
}
